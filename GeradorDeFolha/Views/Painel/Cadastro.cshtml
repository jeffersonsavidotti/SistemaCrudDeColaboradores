@using GeradorDeFolha.Enums;
@model CadastroModel
@{
    ViewData["Title"] = "Cadastro Colaborador";
    Layout = "_LayoutMain";
}


<main id="main" class="main">
    <div class="text-center">
         <div class="pagetitle">
            <h1>Cadastro Colaborador</h1>
         </div>
    </div>
    @Html.ValidationSummary()
    <section class="section">
        <div class="row">
            <div class="texte-center">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Dados Cadastrais</h5>
                        <form asp-controller="PainelController" asp-action="Criar" method="post">
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Nome Completo</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="nome" class="form-control">
                                    @Html.ValidationMessageFor(x => x.nome)
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputEmail" class="col-sm-2 col-form-label">E-mail</label>
                                <div class="col-sm-10">
                                    <input type="email" asp-for="email" class="form-control">
                                    @Html.ValidationMessageFor(x => x.email)
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">CPF</label>
                                <div class="col-sm-10">
                                    <input type="text" id="cpfInput" asp-for="cpf" class="form-control" maxlength="11">
                                    @Html.ValidationMessageFor(x => x.cpf)
                                </div>
                            </div>
                            <fieldset class="row mb-3">
                                <legend class="col-form-label col-sm-2 pt-0">Sexo</legend>
                                <div class="col-sm-10">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Sexo" id="gridRadios1" value="M" checked>
                                        <label class="form-check-label" for="gridRadios1">Masculino</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Sexo" id="gridRadios2" value="F">
                                        <label class="form-check-label" for="gridRadios2">Feminino</label>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Perfil</label>
                                <div class="col-sm-10">
                                    <select asp-for="Perfil" class="form-control">
                                        <option value="0">Selecione o Tipo de Conta</option>
                                        <option value="@PerfilEnum.Master">Master</option>
                                        <option value="@PerfilEnum.Comum">Comum</option>
                                        @Html.ValidationMessageFor(x => x.Perfil)
                                        <!-- Adicione mais opções conforme necessário -->
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputDate" class="col-sm-2 col-form-label">Data da Admissão</label>
                                <div class="col-sm-10">
                                    <input type="date" asp-for="AdmissaoData" class="form-control">
                                    @Html.ValidationMessageFor(x => x.AdmissaoData)
                                </div>
                            </div>
                            <!-- Validação de senha -->
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Criar Senha</label>
                                <div class="col-sm-10">
                                    <input type="password" asp-for="senha" class="form-control" id="senha">
                                    @Html.ValidationMessageFor(x => x.senha)
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Repita a Senha</label>
                                <div class="col-sm-10">
                                    <input type="password" asp-for="ConfirmarSenha" class="form-control" id="confirmarSenha">
                                    @Html.ValidationMessageFor(x => x.ConfirmarSenha)
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Cargo</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="cargo" class="form-control">
                                    @Html.ValidationMessageFor(x => x.cargo)
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Salário</label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="SalarioB" class="form-control">
                                    @Html.ValidationMessageFor(x => x.SalarioB)
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="d-flex justify-content-between">
                                    <a role="button" class="btn btn-secondary" asp-controller="Painel" asp-action="Index"> Voltar</a>
                                    <button type="submit" class="btn btn-success" asp-controller="Painel" asp-action="Cadastro">Cadastrar</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </section>
</main>